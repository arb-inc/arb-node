{
  "dxt_version": "0.2",
  "name": "@arb-inc/mcp",
  "version": "0.3.0",
  "description": "The official MCP Server for the Arb Inc API",
  "author": {
    "name": "Arb Inc",
    "email": "support@arb.inc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arb-inc/arb-node.git"
  },
  "homepage": "https://github.com/arb-inc/arb-node/tree/main/packages/mcp-server#readme",
  "documentation": "https://docs.arb.inc",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "ARB_INC_API_KEY": "${user_config.ARB_INC_API_KEY}"
      }
    }
  },
  "user_config": {
    "ARB_INC_API_KEY": {
      "title": "api_key",
      "description": "access token",
      "required": true,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
